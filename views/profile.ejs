<%- include('partials/header') %>
<div class="container mt5">
   <div class="container-center">
      <div class="row">
         <div class="col-2 col-sm-2"></div>

         <div class='col-3 col-sm-3'>
            <div class="input-container">
               <h1 class="card-title" style="margin-top: 50px">User Name</h1>
               <i class="fas fa-user-tie fa-10x"></i>
            </div>
         </div>

         <div class="col-4 col-sm-4">
            <form action="/edit" method="POST">
               <div class="container-inputs">
                  <label for="first-name"><h4 class="input-heading">First name</h4></label>
                  <input type="text" class="form-control" name="first_name" id="first-name" placeholder="First Name" disabled>

                  <label for="last-name"><h4 class="input-heading">Last name</h4></label>
                  <input type="text" class="form-control" name="last_name" id="last-name" placeholder="Last Name" disabled>

                  <label for="rangeAge"><h4 class="input-heading">Age</h4></label>
                  <div class="slidecontainer">
                     <div class="row">
                        <div class="col-11 col-sm-11"><input type="range" class="slider" min="16" max="100" step="1" id="rangeAge" value="75" disabled></div>
                        <div class="col-1 col-sm-1"><h3 id="AgeInput">0</h3></div>
                     </div>
                  </div>

                  <label for="degree"><h4 class="input-heading">Degree</h4></label>
                  <input type="text" class="form-control" name="degree" id="degree" placeholder="Degree" disabled>

                  <label for="faveCourse"><h4 class="input-heading">Favourite Course</h4></label>
                  <input type="text" class="form-control" name="faveCourse" id="faveCourse" placeholder="Favourite Course" disabled>
               </div>

            </form>
         </div>
      </div>
   </div>
</div>

<%- include('partials/footer') %>