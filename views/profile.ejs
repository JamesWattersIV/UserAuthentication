<%- include('partials/header') %>
<div class="container mt5">
   <div class="container-center">
      <div class="row">
         <div class="col-2 col-sm-2"></div>

         <div class='col-3 col-sm-3'>
            <div class="input-container">
               <h1 class="card-title" style="margin-top: 50px"><%=fName%> <%=lName%></h1>
               <i class="fas fa-user-tie fa-10x"></i>
               <hr>
               <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
            </div>
         </div>

         <div class="col-4 col-sm-4">
            <form action="/edit" method="POST">
               <div class="container-inputs">
                  <label for="first-name"><h4 class="input-heading">First name</h4></label>
                  <input type="text" class="form-control" name="first_name" id="first-name"  value='<%=fName%>' placeholder="<%=fName%>" disabled>

                  <label for="last-name"><h4 class="input-heading">Last name</h4></label>
                  <input type="text" class="form-control" name="last_name" id="last-name"  value='<%=lName%>' placeholder="<%=lName%>" disabled>

                  <label for="rangeAge"><h4 class="input-heading">Age</h4></label>
                  <div class="slidecontainer">
                     <div class="row">
                        <div class="col-10 col-sm-10"><input type="range" class="slider" min="16" max="100" step="1" id="rangeAge" value="<%=Age%>" oninput="ageChanged(this.value)" disabled></div>
                        <div class="col-1 col-sm-1"><h3 id="AgeInput"><%=Age%></h3></div>
                     </div>
                  </div>

                  <label for="degree"><h4 class="input-heading">Degree</h4></label>
                  <input type="text" class="form-control" name="degree" id="degree" value="<%=Degree%>" placeholder="<%=Degree%>" disabled>

                  <label for="faveCourse"><h4 class="input-heading">Favourite Course</h4></label>
                  <input type="text" class="form-control" name="faveCourse" id="faveCourse" value="<%=favCourse%>" placeholder="<%=favCourse%>" disabled>

                  <hr>

                  <div class="row">
                     <div class="col-3 col-sm-3"><button class="btn btn-light btn-lg" type="button" id="edit" onclick="editInformation()">Edit</button></div>
                     <div class="col-3 col-sm-3"><button type="submit" class="btn btn-dark btn-lg" id="saveButton" disabled>Save</button></div>
                     <div class="col-2 col-sm-2"></div>
                     <div class="col-3 col-sm-3"><button class="btn btn-dark btn-lg" type="button" onclick="refreshPage()" id="cancel" hidden>Cancel</button></div>
                  </div>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>

<script type="text/javascript" src="js/home.js"></script>
<script type="text/javascript">validateEdit();</script>
<%- include('partials/footer') %>