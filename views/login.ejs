<%- include('partials/header') %>
<div class="container mt-5">
    <div class="row row-layout">
        <div class="col-sm-3"></div>
        <div class="col-sm-5">
            <div class="card">
                <h1 class="card-title"><i class="fas fa-sign-in-alt fa-color"></i>  Sign In</h1>
                <div class="card-body">

                    <!-- Google and Facebook Register -->
                    <div class="card social-block">
                        <div class="card-body">
                            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
                                <i class="fab fa-google"></i>
                                Sign In with Google
                            </a>
                        </div>

                        <div class="card-body">
                            <a class="btn btn-block btn-social btn-facebook" href="/auth/facebook" role="button">
                                <i class="fab fa-facebook"></i>
                                Sign In with Facebook
                            </a>
                        </div>
                    </div>

                    <hr>

                    <!-- Makes POST request to /login route -->
                    <div class="card" id="emailRegCard">
                        <h1 class="sub-title">Sign In With Email</h1>
                        <div class="card-body">
                            <form action="/login" method="POST">
                                <div class="form-group">

                                    <label for="email">Email</label>
                                    <input type="email" class="form-control" name="username">
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="password" class="form-control" name="password">
                                </div>
                                <button type="submit" class="btn btn-dark">Login</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>